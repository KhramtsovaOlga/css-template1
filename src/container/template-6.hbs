   
<header class='header'>
  <div>
  {{>logo}}
  </div>
  
  <nav class='header_nav'>
    <div class="header_nav_right">
      {{>nav list=header}}
    </div> 
  </nav>
</header>

 <main class="main">
  {{#with info}}
  <div class="info_block">
    <h1 class="info_title">{{title}}</h1>
    <p class="info_description">{{description}}</p>
  </div>
  {{/with}}

  {{#with form}}
    <form class="form">
      <h2 class="form_title">{{title}}</h2>
      <div class="form_input_list">
        {{#each inputs}}
        <input type="{{type}}" placeholder="{{placeholder}}"
        class="form_input" name="{{name}}" 
        id="form-input-{{id}}">
        {{/each}}
      </div>

      <div class="form_checkbox"
        <input type="checkbox" class="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}"/>
        <div></div>
        <label for{{checkbox.name}}>{{checkbox.label}}</label>
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </form>
  {{/with}} 
 </main>

 <section class="upd">
  {{#with updates}}
  <div class="upd_title">
    <strong>{{title}}</strong>
  </div>
    {{#each list}}
    <div class="upd_list">
       <div>
      <svg class="upd_icon">32x32</svg>
      </div>
    <div>
      <div class="upd_nickname">{{nickname}}</div>
      <p class="upd_description">{{description}}</p>
    </div>
    </div>

    {{/each}} 
    {{#with show_all}}
    <a href="{{url}}" class="upd_link">{{text}}</a>
    {{/with}}
  
  {{/with}}
  
 </section>


  <div>
  {{#with expirience}}
  <h2 class="exp_title">{{title}}</h2>
    <div class="exp">
      {{#each list}}
     <div class="exp_body">
        <div class="exp_name">{{name}}</div>
        <p class="exp_details">{{details}}</p>
    </div>
        {{/each}}
        {{/with}}
    </div>
 </div>

<footer class="footer">
  <div>
    {{> logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{> nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>
    
  
